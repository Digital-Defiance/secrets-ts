{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": ["$tsc-watch"],
            "group": "build",
            "label": "TypeScript: Watch - tsconfig.json"
        },
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "label": "Build All"
        },
        {
            "type": "npm",
            "script": "typecheck",
            "problemMatcher": ["$tsc"],
            "label": "TypeScript: Type Check"
        },
        {
            "type": "npm",
            "script": "typecheck:test",
            "problemMatcher": ["$tsc"],
            "label": "TypeScript: Type Check Tests"
        },
        {
            "type": "npm",
            "script": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "label": "Run Tests"
        },
        {
            "type": "npm",
            "script": "test:coverage",
            "problemMatcher": [],
            "label": "Run Tests with Coverage"
        },
        {
            "type": "npm",
            "script": "build:ts:watch",
            "isBackground": true,
            "problemMatcher": ["$tsc-watch"],
            "label": "TypeScript: Watch Build"
        }
    ]
}
